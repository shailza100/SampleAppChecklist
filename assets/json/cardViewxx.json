{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [{
                "id": "Sender",
                "type": "TextBlock",
                "text": "${creator[0].displayName} sent a Checklist",
                "size": "small",
                "wrap": true
            },
            {
                "id": "Title",
                "type": "TextBlock",
                "text": "${action.displayName}",
                "size": "large",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Title2",
                "type": "TextBlock",
                "text": "Open items",
                "size": "small",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Items",
                "type": "Container",
                "style": "emphasis",
                "items": [{
                    "type": "TextBlock",
                    "text": "${(action.dataTables[0].dataColumns)}",
                    "size": "medium",
                    "wrap": true,
                    "spacing": "medium"
                }]
            },
            {
                "id": "Summary",
                "type": "TextBlock",
                "text": "Responses: ${summary.rowCount}, Responders: ${summary.rowCreatorCount}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            }
        ],
        "actions": [{
                "id": "SaveButton",
                "title": "Save Changes",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            },
            {
                "id": "EditChecklistButton",
                "title": "Edit Checklist",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            }
        ]
    },
    "data": {
        "action": {
            "command": "GetAction"
        },
        "summary": {
            "command": "GetActionDataRowsSummary",
            "parameters": {
                "addDefaultAggregates": true
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": ["$ActionCreator"]
            }
        }
    }
}