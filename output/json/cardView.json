{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [{
                "id": "Sender",
                "type": "TextBlock",
                "text": "${creator[0].displayName} sent a Checklist",
                "size": "small",
                "wrap": true
            },
            {
                "id": "Title",
                "type": "TextBlock",
                "text": "${action.displayName}",
                "size": "large",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Title2",
                "type": "TextBlock",
                "text": "Open items",
                "size": "small",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Items",
                "type": "Container",
                "style": "emphasis",
                "items": [{
                        "type": "Input.Toggle",
                        "id": "Item1",
                        "title": "${action.dataTables[0].dataColumns[0].displayName}",
                        "value": "false",
                        "valueOn": "true",
                        "valueOff": "false",
                        "wrap": true

                    },
                    {
                        "type": "Input.Toggle",
                        "id": "Item2",
                        "title": "${action.dataTables[0].dataColumns[1].displayName}",
                        "value": "false",
                        "valueOn": "true",
                        "valueOff": "false",
                        "wrap": true

                    }
                ]
            }
        ],
        "actions": [{
                "id": "SaveButton",
                "title": "Save Changes",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            },
            {
                "id": "EditChecklistButton",
                "title": "Edit Checklist",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            }
        ]
    },
    "data": {
        "action": {
            "command": "GetAction"
        },
        "summary": {
            "command": "GetActionDataRowsSummary",
            "parameters": {
                "addDefaultAggregates": true
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": ["$ActionCreator"]
            }
        }
    }
}