{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [{
                "id": "Sender",
                "type": "TextBlock",
                "text": "${creator[0].displayName} sent a Checklist",
                "size": "small",
                "wrap": true
            },
            {
                "id": "Title",
                "type": "TextBlock",
                "text": "${action.displayName}",
                "size": "large",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Count",
                "type": "TextBlock",
                "text": "Number of items in checklist :  ${if(not(empty(dataRows)),count(dataRows),0)}",
                "size": "small",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "OpenItems1",
                "type": "TextBlock",
                "$when": "${equals(count(dataRows),0)}",
                "text": "No open items",
                "size": "small",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "OpenItems2",
                "type": "TextBlock",
                "$when": "${greater(count(dataRows), 0)}",
                "text": "Open items",
                "size": "small",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Items",
                "type": "Container",
                "style": "emphasis",
                "$when": "${greater(count(dataRows), 0)}",
                "items": [{
                    "type": "TextBlock",
                    "$data": "${dataRows}",
                    "$when": "${equals(columnValues['status'],'ACTIVE')}",
                    "text": "${columnValues['checklistItem']}",
                    "wrap": true,
                    "size": "medium",
                    "spacing": "medium"
                }]
            },
            {
                "id": "LastModified",
                "type": "TextBlock",
                "text": "Last updated by ${creator[0].displayName}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            }
        ],
        "actions": [{
            "id": "EditChecklistButton",
            "title": "Edit Checklist",
            "command": "LaunchActionPackageView",
            "parameters": {
                "viewName": "UpdateView"
            }
        }]
    },
    "data": {
        "action": {
            "command": "GetAction"
        },
        "dataRows": {
            "command": "GetActionDataRows",
            "parameters": {
                "pageSize": 10
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": ["$ActionCreator"]
            }
        }
    }
}